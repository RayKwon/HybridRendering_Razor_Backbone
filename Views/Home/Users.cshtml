@model IEnumerable<HybridRendering_Razor_Backbone.Models.User>

@{
    ViewBag.Title = "Users";
}

<div class="user-list">
  <h2>Users</h2>
  
  <table class="table">
    <tbody>
      @foreach (var item in Model)
      {
        <tr data-id="@item.Id">
          <td>@item.Id</td>
          <td>@item.Name</td>
          <td>@item.Suburb</td>
          <td>
            <button class="btn btn-primary" data-hook="btn-delete">Delete</button>
            <a href="@Url.Action("Details","Home", new{id=item.Id})" class="btn btn-primary" data-hook="btn-details">Details</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
</div>

@section scripts{
  <script>
    (function(App){
      var data = @Html.Raw(Json.Encode(Model));
      var items = new App.UserItems(data);
      new App.UsersView({collection:items});
    })(App);    
  </script>
}